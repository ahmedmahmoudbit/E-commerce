<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.final_project_java.activity.search.ProductData" />
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_125sdp"
            android:backgroundTint="#FFFFFF"
            >

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/name_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.itemName}"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/singup"
                />

            <TextView
                android:id="@+id/price_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.price}"
                android:layout_marginTop="@dimen/_105sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/singup"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>