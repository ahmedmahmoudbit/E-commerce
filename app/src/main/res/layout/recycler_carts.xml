<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

        <RelativeLayout
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/carts_style"
                android:layout_width="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_80sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                >

            <ImageView
                android:id="@+id/carts_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:elevation="@dimen/_50sdp"
                android:src="@drawable/ttshirt" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/carts_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="name of product"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/carts_text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="description of prodact"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/carts_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:text="salary of product"
                android:textColor="#FF6B6B"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:id="@+id/minus_item_carts_image"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_65sdp"
                android:src="@drawable/remove_small"
                android:layout_width="@dimen/_16ssp"
                android:layout_height="@dimen/_16ssp" />

            <TextView
                android:id="@+id/add_item_carts_text"
                android:layout_marginStart="@dimen/_145sdp"
                android:layout_marginTop="@dimen/_65sdp"
                android:text="1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="@dimen/_16ssp"
                android:layout_height="@dimen/_16ssp" />

            <ImageView
                android:id="@+id/add_item_carts_image"
                android:layout_marginStart="@dimen/_160sdp"
                android:layout_marginTop="@dimen/_65sdp"
                android:src="@drawable/add"
                android:layout_width="@dimen/_16ssp"
                android:layout_height="@dimen/_16ssp" />


        </RelativeLayout>


</layout>